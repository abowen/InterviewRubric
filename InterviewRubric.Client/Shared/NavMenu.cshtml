@using InterviewRubric.Shared
@using System.Linq
@inject AppState state

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="/">Interview Rubric</a>
    <button class="navbar-toggler" onclick=@ToggleNavMenu>
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class=@(collapseNavMenu ? "collapse" : null) onclick=@ToggleNavMenu>
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match=NavLinkMatch.All>
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/add">
                <span class="oi oi-plus" aria-hidden="true"></span> Add
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/questions">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Build
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <button onclick="@Debug">
                Debug
            </button>
        </li>
    </ul>
</div>

@functions {
    bool collapseNavMenu = true;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    void Debug()
    {
        if (state.RubricQuestions == null)
            return;

        Console.WriteLine("** DEBUG **");
        foreach (var question in state.RubricQuestions)
        {
            Console.WriteLine(question);
        }
        StateHasChanged();
    }
}
